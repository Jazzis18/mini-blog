= link_to 'View All Posts', posts_path, :class => 'btn btn-default'

%table.table.table-stripped
	%thead
		%th #
		%th Name
		%th
	%tbody
		- @tags.each do |tag|
			%tr
				%td= tag.id
				%td= link_to tag.name, tag_path(tag)
				%td= link_to 'Delete tag', tag, :method => :delete, :data => { :confirm => "Are you sure?" }
